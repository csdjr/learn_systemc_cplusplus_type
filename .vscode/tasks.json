{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                //"-std=c++14",
                "-g",
                "-o0",
                "${file}",
                "-I/usr/local/systemc-2.3.1/include", //systemc头文件路径
                "-I${workspaceFolder}", //工作空间
                "-L/usr/local/systemc-2.3.1/lib-linux64", //systemc库路径
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "-lsystemc"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}